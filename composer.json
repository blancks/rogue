{
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Mantle\\": "mantle/",
            "Mask\\": "mask/",
            "Plugin\\": "plugin/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "test/"
        }
    },
    "scripts": {
        "prettify": "php-cs-fixer fix --config ./config/php-cs-fixer/.php-cs-fixer.dist.php --cache-file ./storage/cache/.php-cs-fixer.cache",
        "analyse": " phpstan analyse --configuration phpstan.neon",
        "serve": "php -S 127.0.0.1:80 ./mantle/Dev/builtin-webserver-router.php",
        "test": "phpunit --bootstrap ./mantle/bootstrap.php --colors=always test",
        "test-detailed": "phpunit --bootstrap ./mantle/bootstrap.php --testdox --colors=always test"
    },
    "require-dev": {
        "phpunit/phpunit": "^12",
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.75",
        "tracy/tracy": "^2.10"
    },
    "require": {
        "psr/http-message": "^2.0",
        "psr/http-server-middleware": "^1.0",
        "psr/log": "^3.0",
        "psr/container": "^2.0",
        "guzzlehttp/guzzle": "^7.9",
        "monolog/monolog": "^3.9",
        "nikic/fast-route": "^1.3",
        "php-di/php-di": "^7.0"
    }
}
